Page {
  background-color: #f2f8ff;
}
.indexBox {
  box-sizing: border-box;
  width: 100%;
}
.cartTop {
  box-sizing: border-box;
  width: 100%;
  height: 200rpx;
  background: #F83760;
}
.topNum {
  display: flex;
  box-sizing: border-box;
  align-items: center;
  color: #fff;
  justify-content: space-between;
  padding: 0 30rpx;
  padding-top: 20rpx;
}
.allNum {
  font-size: 23rpx;
}
.cartManage {
  font-size: 28rpx;
}
.cartBox {
  box-sizing: border-box;
  margin-bottom: 116rpx;
  margin-top: -115rpx;
  padding: 0 30rpx;
}
.cartList {
  width: 100%;
  height: 230rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}
.leftIcon {
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #CECECE;
  border-radius: 36rpx;
  margin-right: 10rpx;
}
.leftIconAct {
  width: 36rpx;
  height: 36rpx;
  border-radius: 36rpx;
  margin-right: 10rpx;
}
.listImg {
  width: 141rpx;
  height: 141rpx;
  margin-right: 20rpx;
  margin-left: 8rpx;
}
.listRight {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 141rpx;
}
.rightTop {
  font-size: 20rpx;
  color: #3F3F3F;
}
.rightBot {
  color: #F83760;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.cartBot {
  height: 116rpx;
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.cartBotLeft {
  font-size: 24rpx;
  color: #989898;
  display: flex;
  align-items: center;
}
.cartBotRight {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.allShop {
  color: #989898;
  margin-right: 10rpx;
}
.allPrice {
  color: #F83760;
  margin-right: 15rpx;
}
.goPay {
  height: 66rpx;
  width: 158rpx;
  border-radius: 33rpx;
  background: linear-gradient(45deg, #fd4850, #fc3191);
  color: #fff;
  text-align: center;
  line-height: 66rpx;
}
.delete {
  height: 66rpx;
  width: 158rpx;
  border-radius: 33rpx;
  color: #F83760;
  text-align: center;
  line-height: 66rpx;
  border: 1rpx solid #F83760;
}
.number {
  display: flex;
  align-items: center;
}
.add {
  box-sizing: border-box;
  text-align: center;
  line-height: 30rpx;
  color: #BABABA;
  font-size: 20rpx;
}
.addItem {
  position: relative;
  width: 36rpx;
  height: 34rpx;
  box-sizing: border-box;
  border: 1rpx solid #BABABA;
}
.goodsNumber {
  min-height: 34rpx;
  height: 34rpx;
  width: 45rpx;
  /* padding: 0 30rpx; */
  font-size: 19rpx;
  line-height: 34rpx;
  text-align: center;
  border-top: 1rpx solid #BABABA;
  border-bottom: 1rpx solid #BABABA;
  box-sizing: border-box;
  color: #BABABA;
}
