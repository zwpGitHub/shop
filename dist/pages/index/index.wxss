Page {
  background-color: #f2f8ff;
}
.indexBox {
  box-sizing: border-box;
  width: 100%;
}
.topSwiper {
  margin-bottom: 20rpx;
}
.slideImage {
  background: #000;
  width: 100%;
  height: 290rpx;
}
.midClass {
  box-sizing: border-box;
  background-color: #fff;
  margin: 0 20rpx;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}
.classBox {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  padding: 35rpx 15rpx;
}
.classItem {
  width: 25%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 23rpx;
  color: #909090;
}
.classImage {
  height: 90rpx;
  width: 90rpx;
  border-radius: 90rpx;
  background-color: pink;
  margin-bottom: 10rpx;
}
.classTitle {
  text-align: center;
}
.botSelect {
  box-sizing: border-box;
  background-color: #fff;
  height: 93rpx;
  width: 100%;
  display: flex;
  margin-bottom: 10rpx;
}
.selectItem {
  box-sizing: border-box;
  display: flex;
  font-size: 28rpx;
  width: 25%;
  height: 100%;
  justify-content: center;
  line-height: 93rpx;
  align-items: center;
  color: #838383;
}
.udImg {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}
.upImage {
  width: 13rpx;
  height: 8rpx;
  margin-bottom: 8rpx;
}
.downImage {
  width: 13rpx;
  height: 8rpx;
}
.selectMore {
  height: 33rpx;
  width: 33rpx;
  margin-left: 20rpx;
}
.selectAct {
  color: #fd4751;
}
.botList {
  box-sizing: border-box;
  margin: 0 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.shopBox {
  box-sizing: border-box;
  padding: 10rpx;
  width: 50%;
  height: 403rpx;
}
.shopItem {
  background-color: #fff;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.shopImg {
  width: 100%;
  height: 280rpx;
  background-color: pink;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  margin-bottom: 15rpx;
}
.shopTitle {
  font-size: 24rpx;
  color: #3F3F3F;
  box-sizing: border-box;
  padding: 0 10rpx;
  width: 360rpx;
}
.shopPrice {
  width: 100%;
  color: #F5293D;
  font-size: 36rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 30rpx;
}
.addCart {
  width: 38rpx;
  height: 37rpx;
}
