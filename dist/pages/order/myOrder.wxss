Page {
  background-color: #f2f8ff;
}
.indexBox {
  box-sizing: border-box;
  width: 100%;
}
.topTab {
  height: 88rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 60rpx;
  font-size: 24rpx;
  color: #808080;
  margin-bottom: 10rpx;
}
.tabItem {
  height: 100%;
}
.item {
  padding: 26rpx 0;
}
.itemAct {
  color: #FB345A;
  border-bottom: 5rpx solid #FB345A;
}
.orderBox {
  box-sizing: border-box;
  padding: 0 30rpx;
}
.orderList {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  padding: 45rpx 28rpx 25rpx 28rpx;
  position: relative;
}
.orderTips {
  width: 100rpx;
  height: 32rpx;
  background: #FE8CA2;
  border-top-right-radius: 12rpx;
  font-size: 18rpx;
  color: #fff;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  top: 0;
  right: 0;
}
.goodsMsg {
  width: 100%;
  height: 114rpx;
  box-sizing: border-box;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.goodsImg {
  height: 114rpx;
  width: 114rpx;
  margin-right: 30rpx;
  background: #000;
}
.msgBox {
  margin-right: 30rpx;
  flex: 1;
}
.goodsTitle {
  font-size: 20rpx;
  color: #3F3F3F;
  margin-bottom: 15rpx;
}
.goodsClass {
  font-size: 18rpx;
  color: #808080;
}
.goodsPrice {
  font-size: 20rpx;
  color: #3F3F3F;
  margin-bottom: 5rpx;
  text-align: right;
}
.goodsNum {
  font-size: 18rpx;
  color: #808080;
  text-align: right;
}
.allGoodsBox {
  width: 100%;
  font-size: 20rpx;
  color: #3F3F3F;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.allPrice {
  font-size: 30rpx;
}
.cancelBtn {
  width: 146rpx;
  height: 50rpx;
  border: 1rpx solid #3f3f3f;
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  color: #3F3F3F;
  margin-right: 22rpx;
}
.gopayBtn {
  width: 146rpx;
  height: 50rpx;
  border: 1rpx solid #fd4850;
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  color: #FD4850;
}
.orderBtn {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 24rpx;
  margin-top: 20rpx;
}
